{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/server/webapi.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build client",
            "command": "start ${workspaceFolder}/build_client.bat",
            "type": "shell",
            "args": [
                "${workspaceFolder}"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build client_oktawian",
            "command": "start ${workspaceFolder}/build_client_oktawian.bat",
            "type": "shell",
            "args": [
                "${workspaceFolder}"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}